<div class="container">
  <h1><%= @store.name %></h1>

  <% if @brands.any?() %>

  <h3>Select all brands this store carries:</h3>
    <h3>Brands:</h3>
    <form action="/store/<%= @store.id %>" method="post">
      <input type="hidden" name="_method" value="patch">

      <% @brands.each() do |brand| %>
        <div class="checkbox">
          <input type="checkbox" name="brand_ids[]" value="<%= brand.id() %>"><%= brand.name() %>
        </div>
      <% end %>
      <button type="submit" name="button">Submit</button>
    </form>

  <% end %>


  <% if @store.brands().any?() %>
    <h3>Here are all the brands this store carries:</h3>

    <ul>
      <% @store.brands().each() do |brand| %>
        <li><%= brand.name() %></li>
      <% end %>
    </ul>
  <% else %>
    <p>This store has no brands added yet.</p>
  <% end %>


  <a href="/">Return to Main Page</a>

</div>
